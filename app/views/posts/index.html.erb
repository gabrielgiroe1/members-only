<h1>Posts</h1>
<ul>
  <% @posts.each do |post| %>
    <% if user_signed_in?%>
      <li><%=post.user.email%></li>
    <%end%>
    <li><%= post.title %></li>
    <li><%= post.description %></li>
  <% end %>
</ul>
<%= link_to "New Post", new_post_path %>
<%= button_to "Sign out", destroy_user_session_path, method: :delete %>